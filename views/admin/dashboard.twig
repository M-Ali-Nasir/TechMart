{% extends "dashboardlayout.twig" %} {% block main %}

<div class="container mt-5 py-5">
  <div class="row">
    <div class="col-md-4 col-xl-3">
      <div
        class="card bg-c-blue order-card text-light"
        style="
          background: linear-gradient(45deg, #4099ff, #73b4ff);
          padding: 25px;
        "
      >
        <div class="card-block">
          <h6 class="m-b-20 fs-4">Orders Received</h6>
          <h2 class="text-right">
            <i class="fa fa-cart-plus f-left"></i><span>{{ totalOrders }}</span>
          </h2>
          <p class="m-b-0">
            Orders Received <span class="f-right">{{ totalOrders }}</span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xl-3">
      <div
        class="card bg-c-green order-card text-light"
        style="
          background: linear-gradient(45deg, #2ed8b6, #59e0c5);
          padding: 25px;
        "
      >
        <div class="card-block">
          <h6 class="m-b-20 fs-4">Orders Delivered</h6>
          <h2 class="text-right">
            <i class="fa fa-rocket f-left"></i
            ><span>{{ deliveredOrders }}</span>
          </h2>
          <p class="m-b-0">
            Delivered Orders <span class="f-right">{{ deliveredOrders }}</span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xl-3">
      <div
        class="card bg-c-yellow order-card text-light"
        style="
          background: linear-gradient(45deg, #ffb64d, #ffcb80);
          padding: 25px;
        "
      >
        <div class="card-block">
          <h6 class="m-b-20 fs-4">Orders Pending</h6>
          <h2 class="text-right">
            <i class="fa fa-refresh f-left"></i><span>{{ pendingOrders }}</span>
          </h2>
          <p class="m-b-0">
            Pending Orders <span class="f-right">{{ pendingOrders }}</span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xl-3">
      <div
        class="card bg-c-pink order-card text-light"
        style="
          background: linear-gradient(45deg, #ff5370, #ff869a);
          padding: 25px;
        "
      >
        <div class="card-block">
          <h6 class="m-b-20 fs-4">Orders Cancelled</h6>
          <h2 class="text-right">
            <i class="fa fa-cancel f-left"></i
            ><span>{{ cancelledOrders }}</span>
          </h2>
          <p class="m-b-0">
            Cancelled Orders <span class="f-right">{{ cancelledOrders }}</span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xl-3 mt-5">
      <div
        class="card bg-c-pink order-card text-light"
        style="
          background: linear-gradient(45deg, #f153ff, #e17bf5);
          padding: 25px;
        "
      >
        <div class="card-block">
          <h6 class="m-b-20 fs-4">Total Products</h6>
          <h2 class="text-right">
            <i class="fa-solid fa-tag"></i><span>{{ totalProducts }}</span>
          </h2>
          <p class="m-b-0">
            Total Products <span class="f-right">{{ totalProducts }}</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
